@model IEnumerable<MvcCrud_1N.Models.Clientes>

<h4>Lista de Clientes</h4>

<div class="row">
    <div class="panel-body">
        @using (Html.BeginForm("Index", "Clientes", FormMethod.Post))
        {
            <input type="text" class="form-control" name="texto" placeholder="Pesquisar por..." />
        }
    </div>    
</div>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Consultores.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Consultores.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info"}) 
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-default"} ) 
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger"})
        </td>
    </tr>
}

</table>
<div class="container">
    <footer>
        @Html.ActionLink("Mostrar Todos", "Index", "Clientes")
    </footer>
</div>
