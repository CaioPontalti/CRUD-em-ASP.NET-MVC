@model IEnumerable<MvcCrud_1N.Models.Consultores>

<h4>Lista de Consultores</h4>

<div class="row">
    <div class="panel-body">
        @using (Html.BeginForm("Index", "Consultores", FormMethod.Post))
        {
            <input type="text" class="form-control" name="texto" placeholder="Pesquisar por..." />
        }
    </div>
</div>

<table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
 
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="container">
    <footer>
        @Html.ActionLink("Mostrar Todos", "Index", "Consultores")
    </footer>
</div>